---

- var zeropad = (num) => num < 10 ? `0${num}` : num
- var renderDate = (date) => [date.getFullYear(),zeropad(date.getMonth()+1),zeropad(date.getDate())].join('-')
- var renderPost = (post) => `${renderDate(post.date)} - ${post.data.title}`

ul
  each post in collections.posts.slice().reverse()
    li
      a(href=post.url)= renderPost(post)
